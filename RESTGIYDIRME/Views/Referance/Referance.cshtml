@model ReferanceResponseModel

@{
    ViewData["Title"] = "Referance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hgroup">
    <div class="container">
        <h1>Referances</h1>
        <h2>
            This could be a showcase of your work! We are using the Isotope Jquery plugin to filter results.
            This is the<strong> strict version</strong>, you should also check out the<a href="gallery.html"><strong> great Masonry version</strong></a>. All photos © by <a href="http://www.dimitragiannouka.com" target="_blank">Dimitra Giannouka</a>.
        </h2>
        <ul class="breadcrumb pull-right">
            <li><a href="index.html">Home</a> </li>
            <li class="active">Portfolio</li>
        </ul>
    </div>
</section>

<section class="portfolio_strict">
    <div class="container">
        <div class="row isotope_portfolio_container">
            @foreach (var item in Model.Referances)
            {
                <div class="cat_travel col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    <div class="portfolio_item">
                        <a href="#" data-path-hover="M 180,190 0,158 0,0 180,0 z">
                            <figure style="background-image:url(@item.Icon)">
                                <svg viewBox="0 0 180 320" preserveAspectRatio="none">
                                    <path d="M 180,0 0,0 0,0 180,0 z" />
                                </svg>
                                <figcaption>
                                    <p>@item.Description</p>
                                    <div class="view_button">Description</div>
                                </figcaption>
                            </figure>
                        </a>
                        <div class="portfolio_description">
                            <h3><a href="#">@item.Name</a></h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>